<!DOCTYPE html>
<html>
<head>
  <title>Autobots</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- ==========Header=========== -->
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Autobots</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
<% if user_signed_in? %>
        <li><a href="/users/settings">Settings</a></li>
        <li><a href="/users/edit">Profile</a></li>
        <li><a href="/users/sign_out" id="login-main">Logout</a></li>
<% else %>
        <li><a href="/users/sign_in" id="login-main">Login</a></li>
<% end %>
        <li><a href="/help">Help</a></li>
      </ul>
      <!-- <form class="navbar&#45;form navbar&#45;right"> -->
      <!--   <input type="text" class="form&#45;control" placeholder="Search..."> -->
      <!-- </form> -->
    </div>
  </div>
</div>

<!-- ==========Contents=========== -->
<% if user_signed_in? %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="sidebar-header"><h4>Dashboard</h4></li>
        <li class="<%= is_active(summary_dashboards_path) %>"><%= link_to "Summary", summary_dashboards_path %> </li>
        <li class="<%= is_active(dashboards_path) %>"><%= link_to "Dashboards", dashboards_path %> </li>
      </ul>
      <ul class="nav nav-sidebar">
        <li class="sidebar-header"><h4>Metrics</h4></li>
        <li class="<%= is_active(metrics_path) %>"><%= link_to "Metrics", metrics_path %> </li>
      </ul>

      <ul class="nav nav-sidebar">
        <li class="sidebar-header"><h4>Statistics</h4></li>
        
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
     <%= yield %>
    </div>
  </div>
</div>
<% else %>
<!-- ======== No logined user ==============  -->
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
      <%= yield %>  
    </div>
  </div>
</div>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
</body>
</html>
