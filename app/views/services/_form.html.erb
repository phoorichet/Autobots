  <% end %>

  <div class="form-group field">
    <%= f.label :name, class: "col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :setttings, class: "col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :setttings, class: "form-control" %>
    </div>
  </div>
  <div class="form-group field">
    <%= f.label :model_name, class: "col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :model_name, class: "form-control" %>
    </div>
  </div>
   <div class="form-group actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
