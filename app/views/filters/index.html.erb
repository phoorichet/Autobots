<h1>Listing filters</h1>

<table>
  <thead>
    <tr>
      <th>Field</th>
      <th>Operation</th>
      <th>Operand</th>
      <th>Operand Type</th>
      <th>Description</th>
      <th>Metric</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @filters.each do |filter| %>
      <tr>
        <td><%= filter.field %></td>
        <td><%= filter.operation %></td>
        <td><%= filter.operand %></td>
        <td><%= filter.operand_type %></td>
        <td><%= filter.description %></td>
        <td><%= filter.metric_id %></td>
        <td><%= link_to 'Show', filter %></td>
        <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
        <td><%= link_to 'Destroy', filter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

